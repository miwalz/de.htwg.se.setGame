<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<!--here we are mapping  CARD table with class Card in model impl    -->
<hibernate-mapping>
    <class name="CardList" table="CARD_LIST">
        <list name="cards" cascade="all">
            <key column="employee_id"/>
            <list-index column="CARD_LIST_ID"/>
            <one-to-many class="Card"/>
        </list>
    </class>
</hibernate-mapping>